						</div>

						<!-- Parents Card -->
						<div class="target-group-card">
							<div class="card-content">
								<div class="icon-container">
									<div class="icon-wrapper">
										<span class="target-icon">👨‍👩‍👧‍👦</span>
									</div>
								</div>
								<h3 class="card-title">Parents</h3>
								<ul class="benefits-list">
									<li class="benefit-item">
										<span class="checkmark">✓</span>
										<span class="benefit-text">Monitor child's progress</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✓</span>
										<span class="benefit-text">Reduce homework stress</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✓</span>
										<span class="benefit-text">Save on tutoring costs</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✓</span>
										<span class="benefit-text">Weekly progress reports</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✓</span>
										<span class="benefit-text">Safe learning environment</span>
									</li>
								</ul>
							</div>
						</div>

						<!-- Teachers Card -->
						<div class="target-group-card">
							<div class="card-content">
								<div class="icon-container">
									<div class="icon-wrapper">
										<span class="target-icon">👩‍🏫</span>
									</div>
								</div>
								<h3 class="card-title">Teachers</h3>
								<ul class="benefits-list">
									<li class="benefit-item">
										<span class="checkmark">✓</span>
										<span class="benefit-text">Supplement classroom teaching</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✓</span>
										<span class="benefit-text">Identify learning gaps</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✓</span>
										<span class="benefit-text">Enhanced student engagement</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✓</span>
										<span class="benefit-text">Curriculum-aligned content</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✓</span>
										<span class="benefit-text">Student performance analytics</span>
									</li>
								</ul>
							</div>
						</div>

						<!-- Schools Card -->
						<div class="target-group-card">
							<div class="card-content">
								<div class="icon-container">
									<div class="icon-wrapper">
										<span class="target-icon">🏫</span>
									</div>
								</div>
								<h3 class="card-title">Schools</h3>
								<ul class="benefits-list">
									<li class="benefit-item">
										<span class="checkmark">✓</span>
										<span class="benefit-text">Improve overall academic outcomes</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✓</span>
										<span class="benefit-text">Reduce dropout rates</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✓</span>
										<span class="benefit-text">Digital transformation support</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✓</span>
										<span class="benefit-text">Comprehensive reporting tools</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✓</span>
										<span class="benefit-text">Institutional partnerships</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Continue with remaining sections... -->
