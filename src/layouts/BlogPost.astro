---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = {
	title: string;
	description: string;
	pubDate: Date;
	updatedDate?: Date;
	heroImage?: string;
};

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
				line-height: 1.7;
			}
			
			/* Beautiful Our Story Page Styling */
			.prose h2 {
				font-size: 2.5rem;
				font-weight: 700;
				background: linear-gradient(135deg, var(--color-duahtor-blue), var(--color-duahtor-blue-light));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
				margin: 3rem 0 1.5rem 0;
				text-align: center;
				position: relative;
			}
			
			.prose h2::after {
				content: '';
				position: absolute;
				bottom: -10px;
				left: 50%;
				transform: translateX(-50%);
				width: 80px;
				height: 3px;
				background: linear-gradient(135deg, var(--color-duahtor-blue), var(--color-duahtor-blue-light));
				border-radius: 2px;
			}
			
			.prose h3 {
				color: var(--color-duahtor-blue);
				font-size: 1.5rem;
				font-weight: 600;
				margin: 2rem 0 1rem 0;
				position: relative;
				padding-left: 1rem;
			}
			
			.prose h3::before {
				content: '';
				position: absolute;
				left: 0;
				top: 0.5rem;
				width: 4px;
				height: 1.5rem;
				background: var(--color-duahtor-blue);
				border-radius: 2px;
			}
			
			.prose p {
				font-size: 1.125rem;
				line-height: 1.8;
				margin-bottom: 1.75rem;
				color: rgba(55, 65, 81, 0.9);
			}
			
			.prose p strong {
				color: var(--color-duahtor-blue);
				font-weight: 700;
			}
			
			.prose ul {
				background: rgba(0, 102, 255, 0.02);
				border-left: 4px solid var(--color-duahtor-blue);
				padding: 1.5rem 2rem;
				margin: 2rem 0;
				border-radius: 0 12px 12px 0;
			}
			
			.prose ul li {
				font-size: 1.125rem;
				line-height: 1.7;
				margin-bottom: 0.75rem;
				position: relative;
				padding-left: 1.5rem;
			}
			
			.prose ul li::before {
				content: 'âœ“';
				position: absolute;
				left: 0;
				top: 0;
				color: var(--color-duahtor-blue);
				font-weight: bold;
				font-size: 1.2rem;
			}
			
			.prose ul li strong {
				color: var(--color-duahtor-blue);
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
			
			/* Enhanced Founders Section */
			.prose .founders-grid,
			div.founders-grid {
				display: grid !important;
				grid-template-columns: repeat(3, 1fr) !important;
				gap: 3rem !important;
				margin: 4rem auto !important;
				padding: 3rem 2rem !important;
				width: 100% !important;
				max-width: 1100px !important;
				background: linear-gradient(135deg, rgba(0, 102, 255, 0.03) 0%, rgba(51, 133, 255, 0.08) 100%);
				border-radius: 24px !important;
				border: 1px solid rgba(0, 102, 255, 0.1) !important;
				position: relative;
				overflow: hidden;
			}
			
			.prose .founders-grid::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				height: 4px;
				background: linear-gradient(90deg, var(--color-duahtor-blue), var(--color-duahtor-blue-light));
			}
			
			.founders-grid .founder-card,
			div.founder-card {
				text-align: center !important;
				background: rgba(255, 255, 255, 0.7) !important;
				border-radius: 20px !important;
				padding: 2rem 1.5rem !important;
				transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1) !important;
				border: 1px solid rgba(0, 102, 255, 0.1) !important;
				display: flex !important;
				flex-direction: column !important;
				align-items: center !important;
				box-shadow: 0 4px 20px rgba(0, 102, 255, 0.08) !important;
				position: relative !important;
				overflow: hidden !important;
			}
			
			.founders-grid .founder-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				height: 3px;
				background: linear-gradient(90deg, var(--color-duahtor-blue), var(--color-duahtor-blue-light));
				transform: scaleX(0);
				transition: transform 0.4s ease;
			}
			
			.founder-card:hover {
				transform: translateY(-8px) scale(1.02) !important;
				box-shadow: 0 20px 40px rgba(0, 102, 255, 0.25) !important;
				background: rgba(255, 255, 255, 0.95) !important;
			}
			
			.founder-card:hover::before {
				transform: scaleX(1);
			}
			
			.founders-grid .founder-image,
			img.founder-image {
				width: 160px !important;
				height: 160px !important;
				min-width: 160px !important;
				min-height: 160px !important;
				max-width: 160px !important;
				max-height: 160px !important;
				border-radius: 50% !important;
				object-fit: cover !important;
				object-position: center top !important;
				margin: 0 auto 1.5rem !important;
				border: 4px solid var(--color-duahtor-blue) !important;
				box-shadow: 0 8px 25px rgba(0, 102, 255, 0.25) !important;
				display: block !important;
				flex-shrink: 0 !important;
				aspect-ratio: 1/1 !important;
				transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1) !important;
				position: relative !important;
			}
			
			.founder-card:hover .founder-image {
				transform: scale(1.05) !important;
				box-shadow: 0 12px 35px rgba(0, 102, 255, 0.35) !important;
				border-color: var(--color-duahtor-blue-light) !important;
			}
			
			.founder-name {
				font-size: 1.4rem !important;
				font-weight: 700 !important;
				margin: 0.5rem 0 0.25rem 0 !important;
				color: rgb(var(--gray-dark)) !important;
				letter-spacing: -0.025em !important;
			}
			
			.founder-title {
				font-size: 1.1rem !important;
				color: var(--color-duahtor-blue) !important;
				font-weight: 600 !important;
				margin: 0 !important;
				opacity: 0.9 !important;
			}
			
			/* Mobile responsive adjustments */
			@media (max-width: 768px) {
				.prose .founders-grid,
				div.founders-grid {
					grid-template-columns: 1fr !important;
					gap: 1.5rem !important;
					margin: 2rem auto !important;
					padding: 1rem !important;
					max-width: 400px !important;
				}
				
				.founder-card {
					padding: 1rem;
				}
				
				.founder-image {
					width: 120px !important;
					height: 120px !important;
					min-width: 120px;
					min-height: 120px;
					max-width: 120px;
					max-height: 120px;
				}
				
				.founder-name {
					font-size: 1.125rem;
				}
				
				.founder-title {
					font-size: 0.875rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
