<style>
	.footer {
		background-color: var(--color-charcoal-gray);
		color: var(--color-pure-white);
		padding: 4rem 0 2rem 0;
	}

	.footer-container {
		max-width: 80rem;
		margin: 0 auto;
		padding: 0 1rem;
	}

	/* Main Footer Grid */
	.footer-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 3rem;
		margin-bottom: 3rem;
	}


	/* Company Section */
	.company-section {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.logo-container {
		margin-bottom: 1rem;
	}

	.logo-text {
		font-family: 'Poppins', sans-serif;
		font-size: var(--text-2xl);
		font-weight: 700;
	}

	.logo-primary {
		color: var(--color-prussian-blue-light);
	}

	.logo-accent {
		color: var(--color-mango-tango);
	}

	.company-description {
		color: rgba(255, 255, 255, 0.8);
		line-height: var(--leading-relaxed);
		margin: 0;
		max-width: 400px;
	}

	/* Social Links */
	.social-links {
		display: flex;
		gap: 1rem;
		margin-top: 1.5rem;
	}

	.social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 2.5rem;
		height: 2.5rem;
		background: rgba(255, 255, 255, 0.1);
		border-radius: 50%;
		color: rgba(255, 255, 255, 0.7);
		text-decoration: none;
		transition: all 0.3s ease;
		border: 1px solid rgba(255, 255, 255, 0.2);
	}

	.social-link:hover {
		background: var(--color-mango-tango);
		color: var(--color-pure-white);
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(255, 130, 67, 0.3);
	}

	.social-icon {
		width: 1.25rem;
		height: 1.25rem;
	}

	/* Footer Sections */
	.footer-section {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.section-title {
		font-family: 'Poppins', sans-serif;
		font-size: var(--text-lg);
		font-weight: 600;
		margin: 0;
		color: var(--color-pure-white);
		margin-bottom: 1rem;
	}

	.footer-links {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.footer-link {
		color: rgba(255, 255, 255, 0.7);
		text-decoration: none;
		font-size: var(--text-base);
		transition: all 0.3s ease;
		position: relative;
	}

	.footer-link:hover {
		color: var(--color-maize-yellow);
		padding-left: 0.5rem;
	}

	.footer-link::before {
		content: '';
		position: absolute;
		left: -0.5rem;
		top: 50%;
		transform: translateY(-50%);
		width: 0.25rem;
		height: 0.25rem;
		background: var(--color-maize-yellow);
		border-radius: 50%;
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.footer-link:hover::before {
		opacity: 1;
	}

	/* Newsletter Section */
	.newsletter-section {
		background: rgba(255, 255, 255, 0.05);
		border-radius: var(--radius-xl);
		padding: 2rem;
		margin-bottom: 3rem;
		border: 1px solid rgba(255, 255, 255, 0.1);
	}


	.newsletter-content {
		margin-bottom: 1.5rem;
	}


	.newsletter-title {
		font-family: 'Poppins', sans-serif;
		font-size: var(--text-xl);
		font-weight: 600;
		margin: 0 0 0.5rem 0;
		color: var(--color-pure-white);
	}

	.newsletter-description {
		color: rgba(255, 255, 255, 0.8);
		margin: 0;
		line-height: var(--leading-relaxed);
	}

	.newsletter-form {
		display: flex;
		gap: 0.75rem;
		max-width: 400px;
	}

	@media (max-width: 639px) {
		.newsletter-form {
			flex-direction: column;
			max-width: none;
		}
	}

	.newsletter-input {
		flex: 1;
		padding: 0.875rem 1rem;
		border: 1px solid rgba(255, 255, 255, 0.2);
		border-radius: var(--radius-lg);
		background: rgba(255, 255, 255, 0.1);
		color: var(--color-pure-white);
		font-size: var(--text-base);
		transition: all 0.3s ease;
	}

	.newsletter-input::placeholder {
		color: rgba(255, 255, 255, 0.5);
	}

	.newsletter-input:focus {
		outline: none;
		border-color: var(--color-maize-yellow);
		background: rgba(255, 255, 255, 0.15);
		box-shadow: 0 0 0 2px rgba(242, 199, 68, 0.2);
	}

	.newsletter-button {
		padding: 0.875rem 1.5rem;
		background: var(--color-mango-tango);
		color: var(--color-pure-white);
		border: none;
		border-radius: var(--radius-lg);
		font-weight: 600;
		cursor: pointer;
		transition: all 0.3s ease;
		white-space: nowrap;
	}

	.newsletter-button:hover {
		background: var(--color-mango-tango-hover);
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(255, 130, 67, 0.3);
	}

	/* Footer Bottom */
	.footer-bottom {
		border-top: 1px solid rgba(255, 255, 255, 0.2);
		padding-top: 2rem;
	}

	.footer-bottom-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
		margin-bottom: 1rem;
	}


	.copyright {
		color: rgba(255, 255, 255, 0.6);
		font-size: var(--text-sm);
	}

	.copyright p {
		margin: 0;
	}

	.legal-links {
		display: flex;
		gap: 1.5rem;
		flex-wrap: wrap;
		justify-content: center;
	}


	.legal-link {
		color: rgba(255, 255, 255, 0.6);
		text-decoration: none;
		font-size: var(--text-sm);
		transition: color 0.3s ease;
	}

	.legal-link:hover {
		color: var(--color-maize-yellow);
	}

	.footer-tagline {
		text-align: center;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
		padding-top: 1.5rem;
		margin-top: 1.5rem;
	}

	.tagline-text {
		color: rgba(255, 255, 255, 0.7);
		font-size: var(--text-sm);
		margin: 0;
		font-style: italic;
	}

	/* Mobile First Responsive Footer */
	
	/* Mobile (up to 640px) */
	@media (max-width: 639px) {
		.footer {
			padding: 2.5rem 0 1.5rem 0;
		}

		.footer-container {
			padding: 0 0.75rem;
		}

		.footer-grid {
			gap: 2rem;
		}

		.company-section {
			order: -1;
			text-align: center;
		}

		.logo-text {
			font-size: var(--text-xl);
		}

		.company-description {
			font-size: var(--text-sm);
			max-width: none;
		}

		.newsletter-section {
			padding: 1.25rem;
		}

		.newsletter-title {
			font-size: var(--text-lg);
		}

		.newsletter-input,
		.newsletter-button {
			min-height: var(--touch-target);
			padding: 0.875rem 1rem;
			font-size: var(--text-sm);
		}

		.social-link {
			min-width: var(--touch-target);
			min-height: var(--touch-target);
			width: var(--touch-target);
			height: var(--touch-target);
		}

		.footer-link {
			min-height: var(--touch-target);
			padding: 0.625rem 0;
			font-size: var(--text-sm);
		}

		.legal-link {
			min-height: var(--touch-target);
			padding: 0.5rem;
			font-size: var(--text-xs);
		}

		.legal-links {
			gap: 0.5rem;
			flex-direction: column;
			align-items: center;
		}
	}

	/* Small devices (640px and up) */
	@media (min-width: 640px) and (max-width: 767px) {
		.footer {
			padding: 3rem 0 2rem 0;
		}

		.footer-grid {
			gap: 2rem;
		}

		.company-section {
			order: -1;
		}

		.newsletter-section {
			padding: 1.5rem;
		}

		.social-links {
			justify-content: center;
		}

		.legal-links {
			gap: 1rem;
		}
	}

	/* Medium devices (768px and up) */
	@media (min-width: 768px) {
		.footer-grid {
			grid-template-columns: 2fr 1fr 1fr 1fr;
			gap: 2rem;
		}

		.newsletter-section {
			display: flex;
			align-items: center;
			justify-content: space-between;
			gap: 2rem;
		}

		.newsletter-content {
			margin-bottom: 0;
			flex: 1;
		}

		.footer-bottom-content {
			flex-direction: row;
			justify-content: space-between;
		}

		.legal-links {
			justify-content: flex-end;
		}
	}

	/* Large devices (1024px and up) */
	@media (min-width: 1024px) {
		.footer {
			padding: 4rem 0 2rem 0;
		}

		.footer-container {
			padding: 0 2rem;
		}

		.footer-grid {
			gap: 3rem;
		}
	}

	/* Extra large devices (1280px and up) */
	@media (min-width: 1280px) {
		.footer-container {
			max-width: 90rem;
		}
	}
</style>
